    int* result = malloc(2 * sizeof(int));
    int map[10001] = {0}; // cost[i] â‰¤ 10^4

    for (int i = 0; i < arr_count; i++) {
        int complement = m - arr[i];
        if (map[complement]) {
            result[0] = map[complement];
            result[1] = i + 1;
            *result_count = 2;
            return result;
        }
        map[arr[i]] = i + 1; // store 1-based index
    }

    *result_count = 0;
    return NULL;
}
