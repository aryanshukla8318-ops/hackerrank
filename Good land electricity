    n = len(arr)
    i = 0
    plants = 0
    
    while i < n:
        pos = min(n - 1, i + k - 1)
        while pos >= i - (k - 1) and pos >= 0 and arr[pos] == 0:
            pos -= 1
        if pos < i - (k - 1) or pos < 0:
            return -1
        plants += 1
        i = pos + k
    
    return plants
